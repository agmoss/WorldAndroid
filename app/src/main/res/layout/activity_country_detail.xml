<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="190dp"
            android:layout_height="618dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2" android:layout_marginEnd="8dp">
        <TextView
                android:text="@string/geography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="24sp"
                android:textStyle="bold" android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/continent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginBottom="0dp"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/surface_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_marginBottom="0dp"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_marginBottom="0dp"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/government"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:textSize="24sp"
                android:textStyle="bold" android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:paddingBottom="0dp"
                android:maxLength="30" android:textSize="18sp"/>
        <TextView
                android:text="@string/head_of_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_marginBottom="0dp"
                android:paddingBottom="0dp" android:maxLength="30" android:textSize="18sp"/>
        <TextView
                android:text="@string/year_of_independence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView18" android:textSize="18sp"/>
        <TextView
                android:text="@string/local_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:textSize="18sp"/>
        <TextView
                android:text="@string/economy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView13" android:textSize="24sp"
                android:textStyle="bold" android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/gnp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView14" android:textSize="18sp"/>
        <TextView
                android:text="@string/demographics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView15" android:textSize="24sp"
                android:textStyle="bold" android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/population"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView16" android:textSize="18sp"/>
        <TextView
                android:text="@string/life_expectancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView17" android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="197dp"
            android:layout_height="616dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:id="@+id/linearLayout2" app:layout_constraintVertical_bias="0.494">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView19" android:textSize="24sp"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/tvcontinent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvContinent" android:layout_marginBottom="0dp"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/tvsurfacearea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvSurfaceArea" android:layout_marginBottom="0dp"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/tvregion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvRegion" android:layout_marginBottom="0dp"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="24sp" android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/tvgovernmentform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvGovernmentForm" android:paddingBottom="0dp"
                android:maxLength="30" android:textSize="18sp" android:singleLine="true"/>
        <TextView
                android:text="@string/tvheadofstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvHeadOfState" android:layout_marginBottom="0dp"
                android:paddingBottom="0dp" android:maxLength="30" android:textSize="18sp" android:singleLine="true"/>
        <TextView
                android:text="@string/tvindepyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvIndepYear" android:textSize="18sp"
                android:singleLine="false"/>
        <TextView
                android:text="@string/tvlocalname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvLocalName" android:textSize="18sp"
                android:singleLine="true"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="24sp" android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/tvgnp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvGNP" android:textSize="18sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView31" android:textSize="24sp"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/tvpopulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvPopulation" android:textSize="18sp"/>
        <TextView
                android:text="@string/tvlifeexpectancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvLifeExpectancy" android:textSize="18sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>